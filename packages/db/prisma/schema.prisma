generator client {
  provider = "prisma-client-js"
  output = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id               String @default(cuid()) @id
  clerkId          String @unique
  email            String @unique
  name             String
  provider         String?
  profileImageUrl  String?
  providerUserId   String?
  createdAt       DateTime @default(now())
}

model Room {
  id String @default(cuid()) @id 
  name String
}